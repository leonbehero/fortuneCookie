Public Function RandNorm(meanVal As Double, Stdev As Double)
    RandNorm = WorksheetFunction.NormInv(Rnd, meanVal, Stdev)
End Function


Sub testdist()
    Dim x As Single
    Dim y As Single
    Dim d As Single
    Dim UX As Integer
    Dim UY As Integer
    Dim IX As Integer
    Dim IY As Integer
    UX = 243
    UY = 646
    IX = 288
    IY = 9798
    x = (UX - IX) ^ 2
    y = (UY - IY) ^ 2
    d = Sqr(x + y)
    Debug.Print d
    
End Sub

